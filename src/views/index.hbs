<section class="film">
  <div class="fiml-content">
    <div class="main-film">

      {{#each mainFilms}}
      <div id="infor-{{this.id}}">
        <div class="logo">
          <img src="/images/netflix.png" alt="logo" />
          <p class="head">FILM</p>
        </div>
        <div class="info_film">
          <p id="film-title" class="info-film-title">{{this.name}}</p>
          <pre class="info-film-information">IMDb Rating 2021 Thể loại: {{this.genre}}</pre>

          <div class="rate-info">
            <img class="rate-icon" src="/images/staricon.png" alt="star" />
            <p>{{this.rating}}/10</p>
          </div>
        </div>
        <div class="review-content">
          <div class="content-left">
            <div class="content">
              {{{this.description}}}
            </div>
            <div class="button-watch">
              <button class="button-watch-trailer">Xem Trailer</button>
              <button class="button-watch-review">Xem Review</button>
            </div>
          </div>
          <div class="content-right">
            <img id="img-poster" src="{{this.poster}}" alt="poster" />
          </div>
        </div>
      </div>
      {{/each}}

    </div>
    <div class="others-film">
      <ul>
        {{! <li id="container-film1"><img id="film1" src="/images/firm_spiderman.jpg" alt="" /></li>
        <li id="container-film2"><img id="film2" src="/images/firm_like_a_boss.jpg" alt="" /></li>
        <li id="container-film3"><img id="film3" src="/images/firm_inside_out.jpg" alt="" /></li>
        <li id="container-film3"><img id="film4" src="/images/squid_game-1000.png" alt="" /></li> }}
        {{#each mainFilms}}
        <li id="container-{{this.id}}">
          <img id={{this.id}} src={{this.poster}} alt="" onclick="clickElementMainFilms(this)" />
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>

<section class="Anotherfilmwapper">
  <div class="another-flim-container">
    <div class="container-item">
      <div class="top-content">
        <div class="text-container-top">
          <h1>XEM THÊM</h1>
          <h1>REVIEW PHIM KHÁC</h1>
        </div>
        <div class="icon-top">
          <i class="fas fa-film board"></i>
        </div>
      </div>
      <div class="middle-container">
        <div class="middle-content">
          {{#each otherFilms}}
          <div class="content-item">
            <img src={{this.poster}} alt={{this.name}}({{this.releaseYear}}) class="item-img" />
            <div class="text-content">
              <p>{{this.name}}</p>
              <p>{{this.releaseYear}}</p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="bottom-content">
        <i class="fas fa-video flim"></i>
      </div>
    </div>
  </div>
</section>

