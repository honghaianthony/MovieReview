<section class="login">
    <div class="content-left">
        <img src="images/fastfurious.jpg" alt="" />
    </div>
    <div class="content-right">
        <div class="form-login">
            <div class="login-title row">
                <img src="images/login_icon.png" />
                <div class="login-title-text">Đăng nhập</div>
            </div>
            <form
                id="login"
                class="input-group row"
                action="/login"
                method="post"
            >
                <div class="login-input-form">
                    <input
                        type="text"
                        class="input-field"
                        placeholder="Tên tài khoản"
                        name="username"
                        required
                    />
                </div>
                <div class="login-input-form">
                    <input
                        type="password"
                        class="input-field"
                        id="myInput"
                        placeholder="Mật khẩu"
                        name="password"
                        required
                    />
                </div>
                <button type="submit" class="toggle-btn">
                    Đăng nhập
                </button>
            </form>
            <div class="others">
                <a href="/register">Không có tài khoản? Đăng ký</a>
                <a href="/forgot-password" class="forgot-password">Quên mật
                    khẩu?</a>
            </div>

            <div class="copyright">
                Bản quyền trực thuộc HongHai Entertainment
            </div>
        </div>
    </div>
</section>